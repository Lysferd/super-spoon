%p#notice= notice
%sub
  = link_to '[home]', root_path
  = link_to '[dev]', dev_path

%h1
  Users
  = link_to '+', new_user_path

%table
  %th Name
  %th Password
  %th{ colspan: 3 } Actions
  - @users.each do |user|
    %tr
      %td= user.name
      %td (hidden)
      %td= link_to 'Show', user
      %td= link_to 'Edit', edit_user_path(user)
      %td= link_to 'Delete', user, method: :delete

Total:
= @users.count
