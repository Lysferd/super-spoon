.container
  %h1
    = @user.name
  %hr
  .row
    .col-25
      ID (Interna)
    .col-75
      = @user.id

  %p
    = link_to 'Edit', edit_user_path(@user)
    - if current_user.is_dev?
      = link_to 'Apagar', @user, method: :delete, data: { confirm: 'Esta ação é irreversível. Deseja continuar?' }
