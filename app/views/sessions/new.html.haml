%p#alert= alert
%p#notice= notice
%h1 Login
#bordered
  = form_tag sessions_path do |f|
    .field
      = label_tag :name
      = text_field_tag :name

    .field
      = label_tag :password
      = password_field_tag :password

    .actions
      = submit_tag 'Login', disable_with: 'Logging in...'
