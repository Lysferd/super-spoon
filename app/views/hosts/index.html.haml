%p#notice= notice
%h1 Hosts
%table
  %thead
    %tr
      %th Name
      %th Facility
      %th{colspan: "3"}
  %tbody
    - @hosts.each do |host|
      %tr
        %td= host.name
        %td= link_to host.facility.name, host.facility
        %td= link_to 'S', host
        %td= link_to 'E', edit_host_path(host)
        %td= link_to 'D', host, method: :delete
%p
  Total:
  = @hosts.count
= link_to 'Dev', dev_path
= link_to 'Back', :back
= link_to 'New', new_host_path
